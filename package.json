{
  "name": "php-test-action",
  "version": "1.1.0",
  "description": "GitHub Action for running PHP tests with PHPUnit or Pest",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build lib/main.js -o dist --source-map --minify",
    "all": "npm run build && npm run format && npm run lint && npm run package",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeroseven/php-test-action.git"
  },
  "keywords": [
    "github-action",
    "php",
    "phpunit",
    "pest",
    "testing",
    "coverage",
    "typo3",
    "laravel"
  ],
  "author": "zeroseven",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^5.0.1",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "fast-xml-parser": "^4.3.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "semantic-release": "^23.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
